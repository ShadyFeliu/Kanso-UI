{
  "name": "@kanso-ui/ui",
  "version": "0.1.0",
  "description": "Kanso UI React component library.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "cross-env VITEST_SCOPE=ui vitest run --config ../../vitest.config.ts"
  },
  "keywords": [
    "react",
    "component-library",
    "design-system",
    "kanso-ui"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@kanso-ui/styles": "workspace:*",
    "@kanso-ui/tokens": "workspace:*"
  }
}

